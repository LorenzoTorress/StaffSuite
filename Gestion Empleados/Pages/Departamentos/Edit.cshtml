@page
@model Gestion_Empleados.Pages.Departamentos.EditModel
@{
}
<form method="post">
    <input type="hidden" asp-for="Departamento.Id" />

    <div class="form-group">
        <label asp-for="Departamento.Nombre"></label>
        <input asp-for="Departamento.Nombre" class="form-control" />
        <span asp-validation-for="Departamento.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Departamento.Descripcion"></label>
        <input asp-for="Departamento.Descripcion" class="form-control" />
        <span asp-validation-for="Departamento.Descripcion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
</form>